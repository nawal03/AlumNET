<style>
    @import url('https://fonts.googleapis.com/css?family=Numans');

    html,body{
    background-image: url('https://firebasestorage.googleapis.com/v0/b/alumnet-dde22.appspot.com/o/images%2Fstatic%20images%2Fbg-01.jpg?alt=media&token=f08210cd-58b6-4ad3-94af-9f2ab1593625');
    background-size: cover;
    background-repeat: no-repeat;
    height: 100%;
    font-family: 'Numans', sans-serif;
    }

    .container-fluid{
    height: 100%;
    align-content: center;
    }


    .error{
        color:white;
    }

    .card{
    margin-top: auto;
    margin-bottom: auto;
    width: 500px;
    background-color: rgba(54, 54, 54, 0.5) !important;
    }

    .card-header h3{
    color: white;
    }


    input:focus{
    outline: 0 0 0 0  !important;
    box-shadow: 0 0 0 0 !important;
    }

    select:focus{
    outline: 0 0 0 0  !important;
    box-shadow: 0 0 0 0 !important;
    }

    .login_btn{
    color: rgb(255, 255, 255);
    background-color: #940031;
    width: 100px;
    }

    .login_btn:hover{
    color: #940031;
    background-color: white;
    }

