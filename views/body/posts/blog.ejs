<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
<style>
    p{
        text-align: justify;
        font-size: 20px;
    }
    .btn-primary{
    color: rgb(255, 255, 255);
    background-color: #940031;
    
    }
    .btn-primary:hover{
    color: #940031;
    background-color: white;
    }
    .card small{
        color: gray;
    }
</style>

<section style="background-color: #eee;">
    <div class="container py-4">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body text-center">
    <% if (cur_user_id===blog.USER_ID) { %>
    <div class="d-flex justify-content-end" style="margin-bottom: 10px;">
        <!-- Button trigger modal -->
        <button type="button" class="btn btn-primary mb-2" style="margin-right: 5px;" data-bs-toggle="modal" data-bs-target="#editBlogModal">
            <i class="fas fa-pen"></i></button>
            
        <form method="post" action="/api/blog/delete/<%- blog.POST_ID %>">
            <button type="submit" class="btn btn-primary mb-2"><i class="fas fa-trash"></i></button>
        </form>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="editBlogModal" tabindex="-1" role="dialog" aria-labelledby="editBlogModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editBlogModalLabel">Edit Blog</h5>
                </div>
                <div class="modal-body">
                    <form method="post" action="/api/blog/update/<%- blog.POST_ID %>">
                        <div class="form-group row">
                            <label for="title" class="form-label">Title</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="title" name="title" required
                                    value="<%= blog.TITLE %>">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="topic" class="form-label">Topic</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="topic" name="topic" required
                                    value="<%= blog.TOPIC %>">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="description" class="form-label">Description</label>
                            <div class="col-sm-10">
                                <textarea class="form-control" id="description" name="description"
                                    required><%= blog.DESCRIPTION %></textarea>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary mb-2">Update Blog</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <%}%>
    
    <h2>
        <%= blog.TITLE %>
    </h2>
    <br />
    <span>Posted on: <%= blog.TIMESTAMP %>
    </span>
    <br/>
    <span>Posted by: <%= blog.USER_NAME %>
    </span>
    <br/>
    <span>Topic: <%= blog.TOPIC %></span>
    <br />
    <br/>
    <div class="postDescription" style="background-color: rgb(248, 250, 255);">
    <p style="white-space: pre-line">
        <%= blog.DESCRIPTION %>
    </p>
    </div>
    <div class="timeline-footer">
        <div class="d-flex justify-content" style="margin-bottom: 10px;">
            <%if (blog.IS_LIKED==='NO' ) {%>
            <form id="like<%- blog.POST_ID %>" action="/api/post/like/<%- blog.POST_ID %>" method="post">
                <input name="type" value="blog" hidden>
            <a href="javascript:;" class="m-r-15 text-inverse-lighter"
                onclick="document.getElementById('like<%- blog.POST_ID %>').submit();" style="color: rgb(95, 95, 95);"><i
                    class="fa fa-thumbs-up fa-fw fa-lg m-r-3" style="color: rgb(95, 95, 95);"></i>
                Like </a>
            <%= blog.LIKE_COUNT%>
            </form>
            <%} else {%>
            <form id="unlike<%- blog.POST_ID %>" action="/api/post/unlike/<%- blog.POST_ID %>" method="post">
                <input name="type" value="blog" hidden>
                <a href="javascript:;" class="m-r-15 text-inverse-lighter"
                    onclick="document.getElementById('unlike<%- blog.POST_ID %>').submit();"><i
                        class="fa fa-thumbs-up fa-fw fa-lg m-r-3" style="color: rgb(26, 26, 224);"></i>
                    Like </a>
            </form>
            <%= blog.LIKE_COUNT%>
                <%}%>
            <a href="javascript:;" class="m-r-15 text-inverse-lighter" style="color: rgb(95, 95, 95);"><i
                    class="fa fa-comments fa-fw fa-lg m-r-3" style="color: rgb(95, 95, 95);"></i>
                Comment </a>
            <%= blog.COMMENT_COUNT%>
        </div>
        <div class="timeline-comment-box">
            <div class="input">
                <form action="/api/post/comment/<%- blog.POST_ID %>" method="post">
                    <input name="type" value="blog" hidden>
                    <div class="input-group" style="margin-bottom: 20px;">
                        <input type="text" class="form-control rounded-corner" name="body" placeholder="Write a comment...">
                        <span class="input-group-btn p-l-10">
                            <button class="btn btn-primary f-s-12 rounded-corner" type="submit">Comment</button>
                        </span>
                    </div>
                </form>
            </div>
        </div>
        <div class="allComments">
        </div>
    </div>
</div>
</div>
</div>
</div>
</div>
</section>

<script>
    let blog = <%- JSON.stringify(blog)%>;
    let cur_user_id = <%- cur_user_id %>;
    $(document).ready(function () {
            $.ajax({
                type: "GET",
                url: `/api/post/comment/${blog.POST_ID}`,
                success: function (result) {
                    $.map(result, function (data, i) {
                        let time = data.TIMESTAMP.split(".");
                        if(cur_user_id === blog.USER_ID && cur_user_id !== data.USER_ID) {
                            $(`.allComments`).append(
                                `<div class="card p-3" style="margin-bottom: 10px;">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="user d-flex flex-row align-items-center"> <img src="${data.PROFILE_PICTURE}" width="30"
                                                class="user-img rounded-circle mr-2"> 
                                            <span>
                                                <a href="/api/user/${data.USER_ID}" style="color: black;"><small class="font-weight-bold text-primary" style="color: black;">${data.USER_NAME}</small></a> 
                                                <small class="font-weight-bold">${data.BODY}</small></span> </div> 
                                                <small>${time[0]}</small>
                                    </div>
                                    <div class="d-flex justify-content-end" style="margin-bottom: 10px;">
                                        <form method="post" action="/api/post/comment/delete/${data.COMMENT_ID}">
                                            <input name="type" value="blog" hidden>
                                            <input type="text" name="post_id" value="${data.POST_ID}" hidden>
                                            <button type="submit" class="btn btn-primary mb-2" onclick="return confirm('Are you sure you want to delete this blog?');"><i class='fas fa-trash'></i></button>
                                        </form>
                                    </div>
                                </div>`
                            )
                        }
                         else if(cur_user_id === data.USER_ID) {
                            $(`.allComments`).append(
                                `<div class="card p-3" style="margin-bottom: 10px;">
                                    <div class="d-flex justify-content-between align-items-center"> 
                                        <div class="user d-flex flex-row align-items-center"> <img src="${data.PROFILE_PICTURE}" width="30"
                                                class="user-img rounded-circle mr-2"> 
                                            <span>
                                                <a href="/api/user/${data.USER_ID}" style="color: black;"><small class="font-weight-bold text-primary" style="color: black;">${data.USER_NAME}</small></a> 
                                                <small class="font-weight-bold">${data.BODY}</small></span> </div> 
                                                <small>${time[0]}</small>
                                    </div>
                                    <div class="d-flex justify-content-end" style="margin-bottom: 10px;">

                                        <button type="button" class="btn btn-primary mb-2" style="margin-right: 5px;" data-bs-toggle="modal" data-bs-target="#editCommentModal${data.COMMENT_ID}">
                                            <i class="fas fa-pen"></i></button>
                                        <form method="post" action="/api/post/comment/delete/${data.COMMENT_ID}">
                                            <input name="type" value="blog" hidden>
                                            <input type="text" name="post_id" value="${data.POST_ID}" hidden>
                                            <button type="submit" class="btn btn-primary mb-2" onclick="return confirm('Are you sure you want to delete this blog?');"><i class="fas fa-trash"></i></button>
                                        </form>
                                    </div>
                                    
                                    <div class="modal fade" id="editCommentModal${data.COMMENT_ID}" tabindex="-1" role="dialog" aria-labelledby="editCommentModalLabel"
                                        aria-hidden="true">
                                        <div class="modal-dialog" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="editCommentModalLabel">Edit Comment</h5>
                                                </div>
                                                <div class="modal-body">
                                                    <form method="post" action="/api/post/comment/update/${data.COMMENT_ID}">
                                                        <div class="form-group row">
                                                                <textarea class="form-control" id="comment" name="body"
                                                                    required>${data.BODY}</textarea>
                                                        </div>
                                                        <input name="type" value="blog" hidden>
                                                        <input type="text" name="post_id" value="${data.POST_ID}" hidden>
                                                        <button type="submit" class="btn btn-primary mb-2">Edit Comment</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>`
                            )
                        } 
                        else {
                            $(`.allComments`).append(
                                `<div class="card p-3" style="margin-bottom: 10px;">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="user d-flex flex-row align-items-center"> <img src="${data.PROFILE_PICTURE}" width="30"
                                                class="user-img rounded-circle mr-2"> 
                                            <span>
                                                <a href="/api/user/${data.USER_ID}"><small class="font-weight-bold text-primary">${data.USER_NAME}</small></a> 
                                                <small class="font-weight-bold">${data.BODY}</small></span> </div> 
                                                <small>${time[0]}</small>
                                    </div>
                                </div>`
                            )
                        }
                    })
                }
            })
        });
</script>