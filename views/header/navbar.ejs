<style>
    .navbar{
        align-content: space-between;
        background-color: rgb(0, 0, 0, 0.2);
        padding-left: 50px;
        padding-right: 50px;
    }
    .logo {
        height: 70px;
        width: 70px;
        margin-right: 15px;
    }
    .website-name{
        color: #940031;
        font-family: 'Courier New', Courier, monospace;
        font-weight: bold;
        padding-top: 15px;
    }
    .nav-item{
        font-size: 18px;
        margin-right: 10px;
    }
    .nav-item a{
        color: #940031;
    }
    .nav-item a:visited{
        text-decoration: underline;
        color: #940031;
    }
    .nav-item a:hover{
        text-decoration: underline;
        color: #940031;
    }
    .log-out-btn{
        background-color: transparent;
        border: none;
        outline-color: transparent;
        color: #940031;
        margin-top: 7px;
    }
    .log-out-btn:hover{
        background-color: transparent;
        border: none;
        outline-color: transparent;
        color: #940031;
        text-decoration: underline;
